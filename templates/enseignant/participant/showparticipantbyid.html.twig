{% extends 'enseignant/enseignatevent.html.twig' %}

{% block title %}Détails du Participant{% endblock %}

{% block stylesheets %}
<style>
    body {
        background-color: #f8f9fa;
    }

    .details-container {
        animation: fadeIn 1s ease-in-out;
        max-width: 800px;
        margin: auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 0.5rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .details-title {
        text-align: center;
        font-size: 1.8rem;
        font-weight: bold;
        color: #343a40;
        margin-bottom: 20px;
    }

    .details-list {
        list-style: none;
        padding: 0;
        margin-bottom: 20px;
    }

    .details-list li {
        padding: 1rem;
        margin-bottom: 0.5rem;
        background-color: #f8f9fa;
        border-left: 5px solid #007bff;
        border-radius: 0.375rem;
        box-shadow: 0 0.0625rem 0.125rem rgba(0, 0, 0, 0.05);
    }

    .details-list li span {
        font-weight: bold;
        color: #007bff;
    }

    .action-buttons {
        text-align: center;
    }

    .btn-primary:hover, .btn-warning:hover, .btn-danger:hover {
        transform: scale(1.05);
        transition: all 0.3s ease-in-out;
    }
</style>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="details-container">
        <h1 class="details-title">👤 Détails du Participant</h1>
        <ul class="details-list">
            <li><span>📛 Nom:</span> {{ participants.Nom }}</li>
            <li><span>📝 Prénom:</span> {{ participants.Prenom }}</li>
            <li><span>📧 Email:</span> {{ participants.Email }}</li>
            <li><span>📅 Date d'Inscription:</span> {{ participants.DateInscription ? participants.DateInscription|date('Y-m-d') : 'Non défini' }}</li>
            <li><span>📞 Téléphone:</span> {{ participants.Telephone }}</li>
        </ul>

        
    </div>
</div>
<br>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
