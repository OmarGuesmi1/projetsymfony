        align-items: center;
        justify-content: center;
    }

    .btn-primary span {
        margin-left: 10px;
        animation: shake 2s infinite;
    }

    @keyframes shake {
        0%, 100% {
            transform: rotate(0);
        }
        25% {
            transform: rotate(-15deg);
        }
        75% {
            transform: rotate(15deg);
        }
    }

    .btn-primary:hover {
        background: linear-gradient(45deg, #ff758c, #ff7eb3);
