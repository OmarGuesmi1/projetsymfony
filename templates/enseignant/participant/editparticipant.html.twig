        }
        50% {
            transform: translateY(-10px);
        }
    }

    .form-text {
        font-size: 1rem;
        color: #333;
        text-align: center;
        margin-bottom: 20px;
    }

    .btn-primary {
        background: linear-gradient(45deg, #ff7eb3, #ff758c);
        border: none;
        font-size: 1.2rem;
        font-weight: bold;
        padding: 12px 20px;
